<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout  android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
<TextView  
    android:id="@+id/leg_time_tv"
    android:layout_width="fill_parent" 
    android:layout_height="65px" 
    android:text="00:00:00.0"
    android:paddingLeft="5px"
    android:paddingRight="5px"
    android:gravity="top|center_horizontal"
    android:textSize="60px"
    />
    
<TableLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0px"
    android:paddingBottom="0px"
    android:shrinkColumns="*"
    android:stretchColumns="*" >    
  <TableRow android:layout_width="fill_parent"
        android:layout_height="35px"
        android:gravity="center_horizontal">
  <TextView  
      android:id="@+id/total_time_tv"
      android:layout_width="fill_parent" 
      android:layout_height="35px" 
      android:text="00:00:00"
      android:paddingLeft="2px"
      android:paddingRight="2px"
      android:textSize="30px"
      />
  <TextView  
      android:id="@+id/split_time_tv"
      android:layout_width="fill_parent" 
      android:layout_height="35px" 
      android:text="00:00.0"
      android:paddingLeft="2px"
      android:paddingRight="2px"
      android:textSize="30px"
      />
  </TableRow>      
  <TableRow android:layout_width="fill_parent"
        android:layout_height="35px"
        android:gravity="center_horizontal">
    <TextView  
        android:id="@+id/total_dist_tv"
        android:layout_width="fill_parent" 
        android:layout_height="35px" 
        android:text="0.000"
        android:paddingLeft="5px"
        android:paddingRight="0px"
        android:textSize="30px"
        />
    <TextView  
        android:id="@+id/leg_dist_tv"
        android:layout_width="fill_parent" 
        android:layout_height="35px" 
        android:text="0.000"
        android:paddingLeft="5px"
        android:paddingRight="0px"
        android:textSize="30px"
        />
    <TextView  
        android:id="@+id/split_dist_tv"
        android:layout_width="fill_parent" 
        android:layout_height="35px" 
        android:text="0.000"
        android:paddingLeft="5px"
        android:paddingRight="0px"
        android:textSize="30px"
        />
  </TableRow>    
  <TableRow android:layout_width="fill_parent"
        android:layout_height="35px"
        android:gravity="center_horizontal">
    <TextView  
      android:id="@+id/pace_tv"
      android:layout_width="fill_parent" 
      android:layout_height="35px" 
      android:text="00:00"
      android:paddingLeft="2px"
      android:paddingRight="2px"
      android:textSize="30px"
      />
  <TextView  
      android:id="@+id/battery_tv"
      android:layout_width="fill_parent" 
      android:layout_height="20px" 
      android:text=""
      android:paddingLeft="2px"
      android:paddingRight="2px"
      android:textSize="15px"
      />
  </TableRow>
</TableLayout>    

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="30px"
    >
    
  <TextView  
      android:id="@+id/time_of_day_tv"
      android:layout_width="fill_parent" 
      android:layout_height="30px" 
      android:text=""
      android:paddingLeft="5px"
      android:paddingRight="0px"
      android:textSize="25px"
      />
  </LinearLayout>  

  <TextView  
      android:id="@+id/status_tv"
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:text="Fast Running Friend started"
      android:paddingLeft="2px"
      android:paddingRight="2px"
      android:textSize="18px"
      />
</LinearLayout>
<LinearLayout  android:id="@+id/split_overlay" android:background="#40000000"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    >
<TextView  android:id="@+id/split_overlay_time_tv"
    android:layout_width="fill_parent"
    android:layout_height="70px"
    android:text="00:00:00.0"
    android:paddingLeft="5px"
    android:paddingRight="5px"
    android:gravity="center"
    android:textSize="60px"
/>
</LinearLayout>
</RelativeLayout>

